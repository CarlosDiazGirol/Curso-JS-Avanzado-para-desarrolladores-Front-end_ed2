	//INGRESAR
	addMoney : function(user.id,user.permisos,cantidad) {
		
		//IF (Cantidad a ingresar <= 0)

			= ERROR "Por favor introduzca otra cantidad"

		//ELSE
			//if user.admin
			
				= cajero.saldo + cantidad a ingresar

			//if user.cliente		

				= cliente.saldo + cantidad a ingresar
				= cajero.saldo + cantidad a ingresar

	}

	//RETIRAR
	getMoney : function(user.id,user.permisos,cantidad) {
		
		//IF (Cantidad a retirar <= 0)

			= ERROR "Por favor introduzca otra cantidad"

		//ELSE

			//cajero.saldo - cantidad a retirar

				//if (cajero.saldo < 0) 

					= ERROR "Cajero no dispone de saldo suficiente, retire una cantidad inferior"

				//else if (user.admin)

